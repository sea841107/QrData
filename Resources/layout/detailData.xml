<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uuidLayout"
        android:gravity="center"
        android:layout_gravity="center">
        <TextView
            android:text="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/dateText"
            android:textSize="47px"
            android:textStyle="bold"
            android:textColor="#ff000000"
            android:layout_marginRight="50px"/>
        <TextView
            android:text="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/nameText"
            android:textSize="60px"
            android:textStyle="bold"
            android:textColor="#ffe65100"
            android:layout_marginLeft="50px"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dataLayout"
        android:gravity="center">
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/unTaxedLayout"
            android:layout_marginRight="70px">
            <TextView
                android:text="未稅額"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/unTaxedTitle"
                android:textSize="47px"
                android:textColor="#ff0000ff"
                android:gravity="center" />
            <TextView
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/unTaxedValue"
                android:textSize="47px"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#ffff0000" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/taxLayout"
            android:layout_marginRight="70px">
            <TextView
                android:text="稅金"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/taxTitle"
                android:textSize="47px"
                android:textColor="#ff0000ff"
                android:gravity="center" />
            <TextView
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/taxValue"
                android:textSize="47px"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#ffff0000" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/priceLayout">
            <TextView
                android:text="金額"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/priceTitle"
                android:textSize="47px"
                android:textColor="#ff0000ff"
                android:gravity="center" />
            <TextView
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/priceValue"
                android:textSize="47px"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#ffff0000" />
        </LinearLayout>
        <Button
            android:text="修改"
            android:layout_width="120px"
            android:layout_height="100px"
            android:id="@+id/modifyButton"
            android:textSize="45px"
            android:textStyle="bold"
            android:typeface="sans"
            android:layout_gravity="center"
            android:textColor="#ff000000"
            android:background="#fff57f17"
            android:layout_marginLeft="70px"/>
        <Button
            android:text="刪除"
            android:layout_width="120px"
            android:layout_height="100px"
            android:id="@+id/deleteButton"
            android:textSize="45px"
            android:textStyle="bold"
            android:typeface="sans"
            android:layout_gravity="center"
            android:textColor="#ffffffff"
            android:background="#ffb71c1c"
            android:layout_marginLeft="30px"/>
    </LinearLayout>
</LinearLayout>
