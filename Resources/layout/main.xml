<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idLayout"
        android:gravity="center">
        <TextView
            android:text="統編"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buyerIdTitle"
            android:textSize="60px"
            android:textStyle="bold"
            android:typeface="sans" />
        <EditText
            android:inputType="none|numberSigned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buyerIdText"
            android:textSize="60px"
            android:singleLine="true"
            android:textColor="#ff0000ff"
            android:hint="00000000"
            android:maxLength="8" />
        <CheckBox
            android:text="稅金500元以上"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tax500CheckBox"
            android:layout_marginLeft="30px"
            android:textSize="40px"
            android:textColor="#ff0000ff" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLayout"
        android:gravity="center">
        <Button
            android:text="開始掃描"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scanButton"
            android:textSize="60px"
            android:textStyle="bold"
            android:typeface="sans"
            android:layout_gravity="center"
            android:textColor="#ffc80000" />
        <Button
            android:text="一鍵清空"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clearButton"
            android:textSize="60px"
            android:textStyle="bold"
            android:typeface="sans"
            android:layout_gravity="center"
            android:textColor="#ffc80000" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listLayout" >
        <ListView
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listView" />
    </LinearLayout>
    <TextView
            android:text="版本號 1.1.5"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/versionText"
            android:typeface="sans"
            android:gravity="right|bottom" />
</LinearLayout>